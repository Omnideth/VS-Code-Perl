            "stopOnEntry": true,
            //"cwd": "${workspaceFolder}", //can be uncommented to set the working directory to the same folder that the file lives in.
            "args": ["abc"]
        },
        {
            "type": "perl",
            "request": "launch",
            "name": "Perl-Debug-NoArgs",
            "program": "${workspaceFolder}/${relativeFile}",
            "stopOnEntry": true
            //"cwd": "${workspaceFolder}", //can be uncommented to set the working directory to the same folder that the file lives in.
        }
    ]
